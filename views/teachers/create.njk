{% extends "layout.njk" %}

{% block content %}
    <form class="card">
        <section 
            class="image"
            style="background: url(https://source.unsplash.com/collection/4852103/900x900) no-repeat center center / cover;"
        ></section>
        <section class="details">
            <h3>Novo Professor(a)</h3>
            
            <div class="item">
                <div>Avatar URL</div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>

            <div class="item">
                <div>Nome completo</div>
                <input type="text" name="name" placeholder="Nome do professor">
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <input type="date" name="birth">
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <select name="schooling">
                    <option value="high_school">Ensino Médio Completo</option>
                    <option value="university">Ensino Superior Completo</option>
                    <option value="masters_degree">Mestrado</option>
                    <option value="doctorate_degree">Doutorado</option>
                </select>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <span><input type="radio" name="type_class" value="presential" checked> Presencial</span>
                <span><input type="radio" name="type_class" value="distance_learning"> À distância</span>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    <span>Engenharia de Software</span>
                    <span>Python</span>
                    <span>Java</span>
                    <span>Banco de Dados</span>
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>03/04/2021</div>
            </div>
        </section>
    </form>
{% endblock %}