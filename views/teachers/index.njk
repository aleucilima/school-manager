{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
    <a href="/teachers/create">Novo</a>
        <table width="100%">
            <thead>
                <th>Professor</th>
                <th>Atendimento</th>
                <th>Ação</th>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ teacher.avatar_url }})"></span>
                            {{ teacher.name }}
                        </td>
                        <td>{{ teacher.services }}</td>
                        <td><a href="/teachers/{{teacher.id}}">Ver</a></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}