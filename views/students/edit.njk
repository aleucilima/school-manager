{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section 
            class="image"
            style="background: url(https://source.unsplash.com/collection/4852103/900x900) no-repeat center center / cover;">
        </section>
        
        <section class="details">

            <form method="POST" action="/students?_method=PUT">
                <h3>Editar Professor(a)</h3>    
                {% include "students/fields.njk" %}

                <input type="hidden" name="id" value={{ student.id }}>
            </form>
            
            <form id="form-delete" action="/students?_method=DELETE" method="POST">
                <input type="hidden" name="id" value={{ student.id }}>
                <button type="submit">Delete</button>
            </form>
        </section>
    </div>
{% endblock %}